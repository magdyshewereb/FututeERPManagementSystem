@typeparam TModel

<ul>
    @foreach (var node in Nodes)
    {
        <li>
            <span @onclick="() => HandleNodeClick(node)">
                @node.Text
            </span>
            @if (node.Children?.Any() == true)
            {
                <DynamicTreeNodes TModel="TModel" Nodes="node.Children" OnNodeClick="OnNodeClick" />
            }
        </li>
    }
</ul>