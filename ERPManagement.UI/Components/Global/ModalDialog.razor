<div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5)" dir=@localizer["dir"]>
    <div class="modal-dialog modal-dialog-centered  ">
        <div class="modal-content border  border-2 border-dark">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">@Title</h5>
                <button type="button " class="btn btn-primary" data-bs-dismiss="modal" aria-label="Close" @onclick="ModalCancel">X</button>
            </div>
            <div class="modal-body ">
                <p class="fw-bold text-center ">@Text</p>
            </div>
            <div class="modal-footer justify-content-center border-0">
                 @switch (DialogType)
                {
                    case ModalDialogType.Ok:
                        <button type="button" class="btn btn-primary" @onclick=@ModalOk>@localizer["Ok"]</button>
                        break;
                    case ModalDialogType.OkCancel:
                        <button id="Confirm" class="btn btn-primary" @onclick=ModalOk>@localizer["Yes"]</button>
                        <button id="Cancel" class="btn btn-secondary" @onclick=ModalCancel>@localizer["No"]</button>
                        break;
                    case ModalDialogType.DeleteCancel:
                        <button type="button" class="btn btn-secondary" @onclick="@ModalCancel">@localizer["Cancel"]</button>
                        <button type="button" class="btn btn-danger" @onclick=@ModalOk>@localizer["Delete"]</button>
                        break;
                }
            </div>
        </div>
    </div>
</div>
